<script type="text/javascript">
	//functional programing brother :D MauMau
	var sum = $$('.points-mumber').reduce(
		( prevVal, elem ) => prevVal + (parseInt(elem.dataset.points) || 0), 0 );

	$('total-member-points').update(sum)
</script>
