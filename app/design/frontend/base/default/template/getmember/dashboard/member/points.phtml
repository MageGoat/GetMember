	<?php foreach ($_pointCollection as $_point): ?>
			<tr>
				<td><?php echo $_point->getOrderIncrementId(); ?></td>
				<td class="points-mumber" data-points="<?php echo $_point->getPoints(); ?>"><?php echo $_point->getPoints(); ?></td>
				<td><?php echo $_point->getState(); ?></td>
			</tr>
	<?php endforeach ?>
